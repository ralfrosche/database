<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="true"
    android:fitsSystemWindows="true"
    android:measureWithLargestChild="true"
    android:orientation="vertical"
    android:scrollbars="horizontal|vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_vertical"
        android:layout_marginTop="5dp"
        android:text="@string/custom_list_header"
        android:textColor="@color/White" />

    <Spinner
        android:id="@+id/custom_list_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.06"
        android:prompt="@string/spinner_prompt"
        tools:listitem="@android:layout/simple_spinner_item" />

    <EditText
        android:id="@+id/searchField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Suchen"
		android:drawableStart="@android:drawable/ic_menu_search"
		android:drawableLeft="@android:drawable/ic_menu_search"
        android:inputType="textAutoComplete" >

        <requestFocus />
    </EditText>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.86"
        android:animateLayoutChanges="false"
        android:fitsSystemWindows="false"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        android:textAlignment="center" >

 <HorizontalScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">

        <TableLayout android:id="@+id/tableLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:baselineAligned="false" android:fitsSystemWindows="false" android:measureWithLargestChild="false" android:scrollbarStyle="insideOverlay" android:scrollbars="horizontal|vertical">

            <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingRight="@dimen/pad1" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/nameLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:text="Name:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Name" android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/vornameLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:scrollHorizontally="true" android:text="Vorname:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/vorname" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Vorname" android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:text="Telefon:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/telefon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:paddingRight="15dp" android:text="Telefon" android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:text="Mobil:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/mobil" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="@dimen/pad1" android:text="Mobil" android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingRight="@dimen/pad1" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:text="Email:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/email" android:layout_width="fill_parent" android:layout_height="wrap_content" android:fitsSystemWindows="true" android:text="Email" android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:text="Strasse:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/strasse" android:layout_width="fill_parent" android:layout_height="wrap_content" android:fitsSystemWindows="true" android:paddingRight="@dimen/pad1" android:scrollHorizontally="true" android:scrollbarStyle="outsideOverlay" android:text="Strasse" android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/textView7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:text="PLZ:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/plz" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="PLZ" android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/textView8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:text="Ort" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/ort" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Ort" android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/textView9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="5dp" android:text="Mitgliedsnr:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/nummer" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Mitgliedsnummer" android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />
            
            <TableRow android:id="@+id/tableRow13" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="fill_horizontal" android:paddingTop="@dimen/xxLarge">

                <TextView android:id="@+id/textView11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status:" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" />

                <TextView android:id="@+id/status" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Status" android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />

<TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
                    android:id="@+id/tableRow12"
                    android:layout_gravity="left" >
 
                <ImageView
                    android:id="@+id/imageViewList"
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:layout_span="2"
                    android:layout_weight="0.85"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:src="@drawable/noimageavailable" />

            </TableRow>
<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="#FF00" />

            

        </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

    <TableRow
        android:id="@+id/tableRow11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/mobileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="center"
            android:src="@drawable/mobile" />

        <ImageButton
            android:id="@+id/smsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/sms" />

        <ImageButton
            android:id="@+id/phoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/phone" />

        <ImageButton
            android:id="@+id/emailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/email" />

        <ImageButton
            android:id="@+id/contactButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/contact" />
    </TableRow>

</LinearLayout>